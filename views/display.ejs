<%- include('includes/head.ejs') %>
   <link <link rel="stylesheet" href="/css/card.css">
</head>
<%- include('includes/navigation.ejs') %>
      <% if (bks.length > 0) { %>
      <div class="grid">
            <% for (let book of bks) { %>
            <article class="card product-item">
               <header class="card__header">
                  <h1 class="product__title"><%= book.title %></h1>
                  <h4 class="product__author">by: <%= book.author %></h4>
               </header>
               <div class="card__image">
                  <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/92/Open_book_nae_02.svg/1200px-Open_book_nae_02.svg.png", alt="A Book">
               </div>
               <div class="card__content">
                  <p class="product__description"><%= book.description %></p>
               </div>
               <div class="card__actions">
                  <button class="btn">Remove Book</button>
               </div>
            </article>
            <% } %>
      </div>
      <% } else { %>
         <h1> No Books Found</h1>
      <% } %>
   </main>
   <%- include('includes/end.ejs') %>